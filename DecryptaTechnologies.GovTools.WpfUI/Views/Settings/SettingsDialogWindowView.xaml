<Window x:Class="DecryptaTechnologies.GovTools.WpfUI.Views.Settings.SettingsDialogWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DecryptaTechnologies.GovTools.WpfUI.ViewModels"
        xmlns:i18n="clr-namespace:rskibbe.I18n.Wpf;assembly=rskibbe.I18n.Wpf"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:SettingsDialogWindowViewModel}"
        Background="{StaticResource AppBg}"
        Title="{i18n:Translate Settings.WindowTitle, Default=Settings}" d:DesignHeight="450" d:DesignWidth="800" SizeToContent="Width" WindowStartupLocation="CenterScreen">

    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="8">
        <ContentControl Content="{Binding CurrentScreen}" />
    </Border>

    </Window>

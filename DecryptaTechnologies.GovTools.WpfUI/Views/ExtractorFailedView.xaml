<UserControl x:Class="DecryptaTechnologies.GovTools.WpfUI.Views.ExtractorFailedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.com/icons/fonts"
             xmlns:i18n="clr-namespace:rskibbe.I18n.Wpf;assembly=rskibbe.I18n.Wpf"
             d:DesignStyle="{StaticResource PageDefaultDesignStyle}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="Solid_TriangleExclamation" PrimaryColor="IndianRed" Width="40" Height="40" />
                <TextBlock Text="{i18n:Translate MainForm.ExtractionFailed, Default='Extraction failed'}" TextAlignment="Center" FontSize="40" Margin="15 0 15 0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
